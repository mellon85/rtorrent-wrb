<h1>Listing torrents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Upped</th>
    <th>Downloaded</th>
    <th>Up rate</th>
    <th>Down rate</th>
    <th>Torrent hash</th>
    <th>Status</th>
  </tr>

<% for torrent in @torrents %>
  <tr>
    <td><%=h torrent.name %></td>
    <td><%=h torrent.size %></td>
    <td><%=h torrent.upped %></td>
    <td><%=h torrent.downloaded %></td>
    <td><%=h torrent.up_rate %></td>
    <td><%=h torrent.down_rate %></td>
    <td><%=h torrent.torrent_hash %></td>
    <td><%=h torrent.status %></td>
    <td><%= link_to 'Show', torrent %></td>
    <td><%= link_to 'Edit', edit_torrent_path(torrent) %></td>
    <td><%= link_to 'Destroy', torrent, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

