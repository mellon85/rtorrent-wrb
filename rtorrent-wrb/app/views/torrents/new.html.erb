<h1>New torrent</h1>

<% form_for(@torrent) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :size %><br />
    <%= f.text_field :size %>
  </p>
  <p>
    <%= f.label :upped %><br />
    <%= f.text_field :upped %>
  </p>
  <p>
    <%= f.label :downloaded %><br />
    <%= f.text_field :downloaded %>
  </p>
  <p>
    <%= f.label :up_rate %><br />
    <%= f.text_field :up_rate %>
  </p>
  <p>
    <%= f.label :down_rate %><br />
    <%= f.text_field :down_rate %>
  </p>
  <p>
    <%= f.label :torrent_hash %><br />
    <%= f.text_field :torrent_hash %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', torrents_path %>
