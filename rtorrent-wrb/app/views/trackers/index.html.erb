<h1>Listing trackers</h1>

<table>
  <tr>
    <th>Torrent hash</th>
    <th>Url</th>
  </tr>

<% for trackers in @trackers %>
  <tr>
    <td><%=h trackers.torrent_hash %></td>
    <td><%=h trackers.url %></td>
    <td><%= link_to 'Show', trackers %></td>
    <td><%= link_to 'Edit', edit_trackers_path(trackers) %></td>
    <td><%= link_to 'Destroy', trackers, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New trackers', new_trackers_path %>
